    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
