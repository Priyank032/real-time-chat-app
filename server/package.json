{
  "name": "realtime-chat-server",
  "version": "1.0.0",
  "description": "Real-time chat server with Socket.IO",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
